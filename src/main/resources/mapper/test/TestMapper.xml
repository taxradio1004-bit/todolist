<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.portfolio.todo.mapper.TestMapper">
    <select id="getServiceStatusMessage" resultType="string">
        SELECT 'Todo API is running!'
    </select>
    <select id="getTodo">
        SELECT * from todo
    </select>
    <select id="postTodo" parameterType="com.portfolio.todo.dto.CreateTodoRequest" resultType="string">
        INSERT INTO todolist.todo
        (id, title, description, completed, created_at, updated_at)
        VALUES (uuid_generate_v4(), #{title}, #{description}, COALESCE(#{completed}, false), now(), now())
        RETURNING id;
    </select>

</mapper>
